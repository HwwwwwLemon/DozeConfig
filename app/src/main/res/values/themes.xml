<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DozeConfig" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.DozeConfig.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.DozeConfig.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="SplashTheme" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item><!--无标题-->
        <item name="android:windowFullscreen">true</item><!--全屏-->
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#8A000000</item>
        <!-- <item name="android:windowBackground">@drawable/splash_background</item>-->
    </style>
</resources>